{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}
<h1>Produits list</h1>
<div id="produits-list">
    <input class="search" placeholder="Recherche">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><button class="sort" data-sort="nom">Nom</button></th>
                <th><button class="sort" data-sort="prix">Prix</button></th>
                <th><button class="sort" data-sort="qte">Quantite</button></th>
                <th><button class="sort" data-sort="subCategorie">Sous-cat√©gorie</button></th>
                <th><button class="sort">Actions</button></th>
            </tr>
        </thead>
        <tbody class="list">
            {% for entity in entities %}
            <tr>
                <td class="nom">{{ entity.nom }}</td>
                <td class="prix">{{ entity.prix }}</td>
                <td class="qte">{{ entity.quantite }}</td>
                <td class="subCategorie">{{ entity.subCategorie.nom }}</td>
                <td>
                    <a class="badge orange" href="{{ path('adminProduits_show', { 'id': entity.id }) }}"><i style="font-size: 1.3em" class="fa fa-book"></i>View</a>
                    <a class="badge green" href="{{ path('adminProduits_edit', { 'id': entity.id }) }}"><i style="font-size: 1.3em" class="fa fa-edit"></i>Edit</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <ul class="pagination"></ul>
</div>

<ul>
    <li>
        <a class="btn miva waves-effect waves-light" href="{{ path('adminProduits_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/filtre.js') }}"></script>
{% endblock %}

