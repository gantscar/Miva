{% extends '::layout/layoutAdmin.html.twig' %}

{% block body -%}


    <h1>SubCategories list</h1>
<div id="sub-categories-list">
    <input class="search" placeholder="Recherche">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th><button class="sort" data-sort="id">Id</button></th>
                <th><button class="sort" data-sort="nom">Nom</button></th>
                <th><button class="sort" data-sort="categorie">Categorie</button></th>
                <th><button class="sort">Actions</button></th>
            </tr>
        </thead>
        <tbody class="list">
            {% for entity in entities %}
                <tr>
                    <td class="id"><a href="{{ path('admin_subCategories_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td class="nom">{{ entity.nom }}</td>
                    <td class="categorie">{{ entity.categorie.nom }}</td>
                    <td>    
                        <a class="badge orange" href="{{ path('admin_subCategories_show', { 'id': entity.id }) }}"><i style="font-size: 1.3em" class="fa fa-eye"></i> Show</a>
                        <a class="badge green" href="{{ path('admin_subCategories_edit', { 'id': entity.id }) }}"><i style="font-size: 1.3em" class="fa fa-edit"></i>Edit</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
     <ul class="pagination"></ul>
</div>

    <ul>
        <li>
            <a class="btn miva waves-effect waves-light" href="{{ path('admin_subCategories_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/filtre.js') }}"></script>
{% endblock %}