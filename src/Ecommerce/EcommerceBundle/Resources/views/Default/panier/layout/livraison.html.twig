{% extends "::layout/defaultLayout.html.twig" %}
{% block titre %}MIVA | Processus de Livraison{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h2>Livraison</h2>
            <div class="span4">
                {% if utilisateur.adresses|length != 0 %}
                    <form action="{{ path('validation') }}" method="POST">

                        <h4>Adresse de livraison</h4>
                        {% for adresse in utilisateur.adresses %}
                            <label class="radio">
                                <input type="radio" name="livraison" value="{{ adresse.id }}" {% if loop.index0 == 0 %}
                                    checked="checked"{% endif %}>
                                {{ adresse.adresse }}, {{ adresse.quartier }}
                                <a href="{{ path('livraisonAdresseSuppression', { 'id' : adresse.id }) }}"><i class="fa fa-trash"></i></a>
                                <br />{{ adresse.prenom }} {{ adresse.nom }}
                            </label>
                        {% endfor %}

                        <button type="submit" class="btn miva">Valider l'adresse</button>
                    </form>
                {% endif %}
            </div>


            <div class="span4 offset2">
                <h4>Ajouter une nouvelle adresse</h4>
                <form action="{{ path('livraison') }}" method="POST" >
                    {{ form_widget(form) }}
                    <button class="btn miva" type="submit">Ajouter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}