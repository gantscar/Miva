<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>Facture</title>
        <link href="{{ pathDefault }}css/facture.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <h1>Miva - Togo</h1>
        <table id="enTete">
            <tr>
                <td colspan="1"></td>
                <td colspan="1"><h1>Facture</h1></td>
                <td colspan="1"></td>
            </tr>
            <tr>
                <td width="80">Page</td>
                <td width="100">Date</td>
                <td width="120">Ref</td>
            </tr>
            <tr>
                <td class="color">[[page_nb]]</td>
                <td class="color">{{ facture.date|date('d-m-Y') }}</td>
                <td class="color">{{ facture.reference }}</td>
            </tr>
        </table>
        <ul id="coordonnes">
            <li>{{ facture.commande.livraison.nom }} {{ facture.commande.livraison.prenom }}</li>
            <li>{{ facture.commande.livraison.adresse}}</li>
            <li>{{ facture.commande.livraison.quartier }} </li>
        </ul>
        <table id="entity">
            <tr>
                <td width="280">DESIGNATION</td>
                <td width="105">QUANTITE</td>
                <td width="100">Prix - Unitaire</td>
                <td width="105">MONTANT </td>
            </tr>
                {% for produit in facture.commande.produit %}
                <tr>
                    <td class="color">{{ produit.reference }}</td>
                    <td class="color">{{ produit.quantite }}</td>
                    <td class="color">{{ produit.prixRed }} F CFA</td>
                    <td class="color">{{ produit.prixRed * produit.quantite }} F CFA</td>
                </tr>
                {% endfor %}
        </table>
        <table id="total">
            <tr>
                <td width="110">TOTAL :</td>
                <td width="100" class="color">{{ facture.commande.prixRed }} F CFA</td>
            </tr>
            {#% for key, tva in facture.commande.reduction %}
            <tr>
                <td width="110">Reduction <span class="color min">{{ key }}</span> :</td>
                <td width="100" class="color">{{ tva }} F CFA</td>
            </tr>
            {% endfor %#}
        </table>
        <div id="footer">
            <span class="color strong">{{ adresse }}</span>
            <br />
            {{ telephone }}
        </div>
    </body>
</html>